#!/usr/bin/env bash
#
# bootstrap installs things.

DOTFILES_ROOT=$(pwd -P)

set -e

echo ''
echo ''
echo 'Beginning dotfiles installation'

if ! [ -x "$(command -v brew)" ]; then
  echo 'Error: homebrew is not installed.' >&2
  exit 1
fi

brew bundle

# find the installers and run them iteratively
for installer in $(find . -name "*install.sh"); do
  echo ''
  echo "Running ${installer}"
  sh -c "${installer}"
done

read -p 'Where would you like symlink for your dotfiles dir to be stored? (e.g. ~/Developer) ' dot_sym_dir

echo ''
echo "installing /dotfiles symlink here: $dot_sym_dir"

ln -s ~/.dotfiles "$dot_sym_dir/dotfiles"

echo ''
echo 'Completed dotfiles installation'
echo ''
echo ''
